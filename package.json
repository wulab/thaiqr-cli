{
	"name": "thaiqr-cli",
	"version": "1.0.0",
	"module": "src/index.ts",
	"type": "module",
	"private": true,
	"scripts": {
		"prebuild": "bun ./scripts/generate-version.ts",
		"build": "bun build --minify --target=node --outfile=dist/thaiqr-cli.js src/index.ts",
		"decode": "bun run src/index.ts decode",
		"encode": "bun run src/index.ts encode",
		"generate": "bun run src/index.ts generate",
		"test": "bun test"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/qrcode-terminal": "^0.12.2"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"qrcode-terminal": "^0.12.0"
	}
}
